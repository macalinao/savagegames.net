mixin players(list)
  table.table.table-striped
    thead
      tr
        th Rank
        th Player Name
        th Score
      each indiv, i in list
        tr
          td= i + 1
          td= indiv.name
          td= indiv.score

div.row
  div.span8
    section#leaderboard
      h1 Top 10 players 
        small
          a(href='/stats/games') Show more...

      div.tabbable
        ul.nav.nav-tabs
          li.active
            a(href='#p-day', data-toggle='tab') Today
          li
            a(href='#p-week', data-toggle='tab') 7 days
          li
            a(href='#p-month', data-toggle='tab') Month
          li
            a(href='#p-alltime', data-toggle='tab') All time
        div.tab-content
          div.tab-pane.active#p-day
            +players(pDay)

          div.tab-pane#p-week
            +players(pWeek)

          div.tab-pane#p-month
            +players(pMonth)

          div.tab-pane#p-alltime
            +players(pAlltime)

    section#latest-games
      h1 Recent games 
        small
          a(href='/stats/games') Show more...

      div.game-row
        h2 Game on December 21, 2012...

  div.span4
    include includes/sidebar
