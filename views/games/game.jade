block head
  title #{game.getWinner().name} wins | Savage Games | Minecraft Hunger Games Server

div.row
  div.span8
    h1 Savage Games Tournament Stats
      br
      small= game.prettyDate()

    table.table.table-striped.table-bordered
      thead
        tr
          th Rank
          th Player
          th Class
          th Time Played
          th Kills
          th Score
      tbody
        each ranking in game.rankings
          tr
            td= ranking.rank
            td
              a(href='/players/#{ranking.player.name}', name=ranking.player.name_lower)= ranking.player.name
            td= ranking.class
            td= ranking.time
            td
              each kill in ranking.kills
                a(href='##{kill.name_lower}')= kill.name
                | , 
            td= ranking.score

  div.span4
    include ../includes/sidebar
